{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"strict": true,
		"sourceMap": true,
		"target": "es5",
		"declaration": true,
		"skipLibCheck": true,
		"rootDir": "src",
		"outDir": "build"
	},
	"include": [
		"src/*"
	],
	"exclude": [
		"node_modules"
	]
}
